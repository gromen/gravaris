---
import logo from "@assets/logo.svg";
import { SITE_CONFIG } from "../config/site";
---

<footer class="bg-black border-t border-white/10 mt-auto">
  <!-- Top Footer Row -->
  <div
    class="container-custom py-8 flex flex-col md:flex-row justify-between items-center gap-6"
  >
    <!-- Logo Area -->
    <div class="flex items-center gap-2">
      <div
        class="w-8 h-8 bg-transparent border-2 border-primary text-primary flex items-center justify-center font-bold rounded-sm"
      >
        <img src={logo.src} alt="Logo" />
      </div>
      <span class="text-xl font-bold text-white">{SITE_CONFIG.name}</span>
    </div>

    <!-- Links / Info -->
    <div class="text-gray-400 text-sm md:text-base text-center md:text-left">
      {
        SITE_CONFIG.services.map((service, index) => (
          <>
            <span>{service}</span>
            {index < SITE_CONFIG.services.length - 1 && (
              <span class="mx-2 text-primary">|</span>
            )}
          </>
        ))
      }
    </div>

    <!-- Contact -->
    <div class="flex items-center gap-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-5 h-5 text-primary"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
        ></path>
      </svg>
      <span class="text-xl font-bold text-primary"
        >{SITE_CONFIG.contact.phone}</span
      >
    </div>
  </div>

  <!-- Bottom Footer Row -->
  <div class="bg-white/5 py-4">
    <div
      class="container-custom flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p class="text-gray-500 text-sm">
        <span class="text-white font-semibold">{SITE_CONFIG.name}.pl</span> | Działamy
        na terenie całej Polski
      </p>

      <a
        href={`tel:${SITE_CONFIG.contact.phoneRaw}`}
        class="bg-primary hover:bg-accent text-black font-bold py-2 px-6 rounded shadow-lg transition-colors"
      >
        Zadzwoń teraz
      </a>
    </div>
  </div>
</footer>
