---
import { Image } from "astro:assets";

interface Props {
  project: {
    id: string;
    data: {
      title: string;
      description: string;
      image: string;
      date: Date;
    };
  };
}

const { project } = Astro.props;

const formattedDate = project.data.date.toLocaleDateString("pl-PL", {
  day: "2-digit",
  month: "2-digit",
  year: "numeric",
});
---

<section class="py-12 md:py-20 bg-dark min-h-screen">
  <div class="container-custom max-w-4xl mx-auto px-4">
    <!-- Breadcrumb / Back link -->
    <a
      href="/#galeria"
      class="inline-flex items-center gap-2 text-gray-400 hover:text-primary transition-colors mb-8 group"
    >
      <svg
        class="w-5 h-5 transform group-hover:-translate-x-1 transition-transform"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M15 19l-7-7 7-7"></path>
      </svg>
      <span>Powr√≥t do galerii</span>
    </a>

    <!-- Main image -->
    <div
      class="relative aspect-video overflow-hidden rounded-lg mb-8 border border-white/10"
    >
      <Image
        src={project.data.image}
        alt={project.data.title}
        width={1200}
        height={675}
        format="webp"
        quality={80}
        class="w-full h-full object-cover"
      />
    </div>

    <!-- Content -->
    <article class="space-y-6">
      <!-- Header -->
      <header class="border-b border-white/10 pb-6">
        <h1 class="text-2xl md:text-4xl font-bold text-white mb-3">
          {project.data.title}
        </h1>
        <div class="flex flex-wrap items-center gap-4 text-sm text-gray-400">
          <span class="flex items-center gap-2">
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
            Data realizacji: <span class="text-primary font-medium"
              >{formattedDate}</span
            >
          </span>
        </div>
      </header>

      <!-- Description -->
      <div class="bg-white/5 rounded-lg p-6 border border-white/10">
        <h2 class="text-lg font-semibold text-primary mb-3">Opis projektu</h2>
        <p class="text-gray-300 leading-relaxed">{project.data.description}</p>
      </div>

      <!-- Body content (markdown) -->
      <div
        class="prose prose-invert prose-lg max-w-none prose-headings:text-white prose-p:text-gray-300 prose-a:text-primary prose-strong:text-white"
      >
        <slot />
      </div>

      <!-- CTA -->
      <div class="pt-8 border-t border-white/10">
        <a
          href="/#kontakt"
          class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-dark font-semibold rounded-lg hover:bg-primary/90 transition-colors"
        >
          Zapytaj o podobny projekt
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </article>
  </div>
</section>
