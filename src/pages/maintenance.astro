---
export const prerender = false;
import { SITE_CONFIG } from "@/config/site";
import logo from "@assets/logo.svg";
import Image from "astro/components/Image.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Gravaris - Strona w budowie">
  <main
    class="min-h-screen flex flex-col items-center justify-center bg-gray-900 text-white p-4 relative overflow-hidden"
  >
    <!-- Background effects -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden z-0">
      <div
        class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-primary/10 rounded-full blur-[100px]"
      >
      </div>
      <div
        class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-black/60 rounded-full blur-[100px]"
      >
      </div>
    </div>

    <div class="relative z-10 text-center max-w-2xl mx-auto">
      <div class="mb-8 inline-block animate-pulse">
        <Image src={logo} width="150" height="150" alt="Maintenance" />
      </div>

      <h1
        class="text-4xl sm:text-6xl font-bold mb-6 bg-gradient-to-r from-white to-primary bg-clip-text text-transparent"
      >
        Gravaris
      </h1>

      <h2 class="text-2xl sm:text-3xl font-semibold mb-6 text-gray-200">
        Strona w budowie
      </h2>

      <p class="text-lg text-gray-400 mb-10 leading-relaxed max-w-lg mx-auto">
        Pracujemy nad czymś wyjątkowym. Nasza nowa strona internetowa jest już
        prawie gotowa. Zapraszamy wkrótce!
      </p>

      <div
        class="hidden flex flex-col sm:flex-row items-center justify-center gap-4 text-sm text-gray-500"
      >
        <div
          class="flex items-center gap-2 px-4 py-2 border border-gray-800 rounded-full bg-gray-900/50 backdrop-blur-sm"
        >
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path></svg
          >
          <span>{SITE_CONFIG.contact.email}</span>
        </div>
      </div>
    </div>
  </main>
</Layout>
